@model RendaVariavelViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Ação</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" enctype="multipart/form-data">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input type="hidden" name="Id" value="@Model.Id" />
            <label for="Id" class="control-label">Sigla</label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="Sigla" class="form-control" />
            }
            else
            {
                <input asp-for="Sigla" class="form-control" readonly/>
            }
            <span asp-validation-for="Sigla" class="text-danger"></span>

            <br />
            <label for="Preco" class="control-label">Preço</label>
            <input asp-for="Preco" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
            <br />
            <input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="btn btn-secondary">
            <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive"
                 width="100">
            <span asp-validation-for="Imagem" class="text-danger"></span>
            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>

            <script>
                function exibirImagem() {
                    var oFReader = new FileReader();
                    oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
                    oFReader.onload = function (oFREvent) {
                        document.getElementById("imgPreview").src = oFREvent.target.result;
                    };
                }
            </script>
        </form>
    </div>
</div>
