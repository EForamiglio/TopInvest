@model List<RendaFixaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">Listagem de Rendas Fixas</h2>
</br>


<fieldset id="areaFiltro" class="form-group">
    <legend>Filtro</legend>
    <div class="row">
        <div class="col-lg-4">
            Descrição<br />
            <input type="text" id="descricao" class="form-control" />
        </div>
        <div class="col-lg-4">
            Duração maior que<br />
            <input type="number" id="duracao" class="form-control" />
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success" value="Aplicar"
                   onclick="aplicaFiltroConsultaAvancadaFixa()" />
        </div>
    </div>
</fieldset>

<br />
<br />

<a href="/rendaFixa/create" class="btn btn-success me-2">Novo Registro</a>
</br> </br>

<div id="resultadoConsulta" class="table-responsive"> 

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ações</th>
                <th scope="col">Descrição</th>
                <th scope="col">Duração</th>
                <th scope="col">Rentabilidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var renda in Model)
            {
                <tr>
                    <td>
                        <a href="/rendaFixa/Edit?id=@renda.Id" class="btn btn-primary me-2">Editar</a>
                        <a href="javascript:apagarRenda(@renda.Id)" class="btn btn-danger">Apagar</a>
                    </td>
                    <td>@renda.Descricao</td>
                    <td>@renda.Duracao</td>
                    <td>@renda.Rentabilidade</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
    function apagarRenda(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = '/rendaFixa/Delete?id=' + id;
    }
</script>
