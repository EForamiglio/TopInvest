@model RendaFixaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Renda Fixa</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" enctype="multipart/form-data">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Descricao" class="control-label">Descrição</label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="Descricao" class="form-control" />
            }
            else
            {
                <input asp-for="Descricao" class="form-control" readonly />
            }
            <span asp-validation-for="Descricao" class="text-danger"></span>

            <br />
            <label for="Rentabilidade" class="control-label">Rentabilidade %a.a</label>
            <input asp-for="Rentabilidade" class="form-control" />
            <span asp-validation-for="Rentabilidade" class="text-danger"></span>

            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>
