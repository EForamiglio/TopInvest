@model List<RendaVariavelViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center white-text">Compra de Ações</h2>
</br>


<fieldset id="areaFiltro" class="form-group white-text">
    <legend>Filtro</legend>
    <div class="row">
        <div class="col-lg-4 white-text">
            Sigla<br />
            <input type="text" id="sigla" class="form-control" />
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success purple-color" value="Aplicar"
                   onclick="aplicaFiltroConsultaTrade()" />
        </div>
    </div>
</fieldset>

</br>
</br>

<div class="col-lg-3 white-text">
    Quantidade:<br />
    <input type="number" id="qtd" class="form-control" />
</div>

</br>

<div id="resultadoConsulta" class="table-responsive">
    <table class="table mx-auto">
        <thead>
            <tr>
                <th class="white-text" scope="col">Ícone</th>
                <th class="white-text" scope="col">Sigla</th>
                <th class="white-text" scope="col">Preço</th>
                <th class="white-text" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var renda in Model)
            {
                <tr>
                    <td>
                        <img id="imgPreview" src="data:image/jpeg;base64,@renda.ImagemEmBase64" class="img-responsive"
                             width="50">
                    </td>
                    <td class="white-text">@renda.Sigla</td>
                    <td class="white-text">@renda.Preco</td>
                    <td> 
                        <a onclick="confirmarCompra(@renda.Id)" class="btn btn-success purple-color">Comprar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>