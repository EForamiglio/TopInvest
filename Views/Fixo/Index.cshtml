@model List<RendaFixaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center white-text">Investimento em Renda Fixa</h2>
</br>


<fieldset id="areaFiltro" class="form-group white-text">
    <legend>Filtro</legend>
    <div class="row">
        <div class="col-lg-4">
            Descrição<br />
            <input type="text" id="descricao" class="form-control white-text" />
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success purple-color" value="Aplicar"
                   onclick="aplicaFiltroConsultaFixo()" />
        </div>
    </div>
</fieldset>

</br>
</br>

<div class="col-lg-3 white-text">
    Valor da aplicação:<br />
    <input type="number" id="valor" class="form-control" />
</div>

</br>

<div id="resultadoConsulta" class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class= "white-text" scope="col">Descrição</th>
                <th class= "white-text" scope="col">Duração</th>
                <th class= "white-text" scope="col">Rentabilidade</th>
                <th class= "white-text" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var renda in Model)
            {
                <tr>
                    <td class= "white-text">@renda.Descricao</td>
                    <td class= "white-text">@renda.Duracao meses</td>
                    <td class= "white-text">@renda.Rentabilidade %</td>
                    <td>
                        <a onclick="confirmarAplicacao(@renda.Id)" class="btn btn-success purple-color">Aplicar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>